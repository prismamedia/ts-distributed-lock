  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --build packages/tsconfig.json packages/tsconfig.esm.json",
    "build:clean": "yarn run build --clean",
    "build:watch": "yarn run build --watch",
    "clean": "git clean -dfqX -- .",
    "prettier": "prettier --write \"./**/src/**/*.ts\"",
    "test": "lerna run --parallel test"
  },
  "devDependencies": {
    "lerna": "^3.18.3",
    "prettier": "prettier/prettier#master",
    "typescript": "^3.7.2"
  }
}
